<Window x:Class="Vistas.DisciplinaForm"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registrar Disciplina" Height="400" Width="500">
    <Grid>
        <StackPanel>
            <TextBox Name="txtDisNombre" Text="Nombre de la Disciplina" Margin="5"/>
            <TextBox Name="txtDisDescripcion" Text="Descripción" Margin="5"/>
            <Button Content="Guardar" Click="btnGuardar_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
